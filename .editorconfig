root = true

[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2

[*.{js,py}]
trim_trailing_whitespace = true

[*.py]
indent_style = space
indent_size = 4

[*.txt]
indent_style = tab
indent_size = 4

[*.{html, md}]
indent_size = 4
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
indent_size = 4
